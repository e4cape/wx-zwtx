/*色条*/
.index-border{height: 20rpx; margin: 20rpx auto; clear: both; background-color: #EDEDED;}
/*申请须知*/
.apply-info{  height: auto; text-align: center;}
.apply-info .top{color: #666666; font-size: 28rpx; margin-bottom: 20rpx;}
.apply-info .bottom{color: #666666; font-size: 26rpx;}
/*提交审核*/
.submit{width: 100%; height: 100rpx; line-height: 100rpx; text-align: center;background-color: #DD2B2B; position: fixed;bottom: 0;border-radius:0}
.btn{width: 100%; height: 100rpx; line-height: 100rpx; text-align: center;background-color: #999999; position: fixed;bottom: 0;}
.submit text{ color: #ffffff; font-size: 26rpx;}
.btn text{ color: #ffffff; font-size: 26rpx;}