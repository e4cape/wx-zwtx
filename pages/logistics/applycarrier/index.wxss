/* 承运商申请基本资料 */
.carrier{height: auto; margin: 0rpx auto;}
.carrier view{ height:120rpx; line-height: 120rpx; border-bottom: 2rpx solid #D7D7D7; margin: 0rpx 30rpx;}
.carrier view text{float: left; padding-right: 40rpx; color: #666666; font-size: 26rpx;}
.carrier view input{float: left; height:120rpx; line-height: 120rpx;color: #999999; font-size: 26rpx;}
/* 承运商申请身份证信息 */
.card{ height: auto; margin: 0rpx 30rpx 40rpx; clear: both; overflow: hidden;}
.card .card-title{ height:120rpx; line-height: 120rpx; color: #666666; font-size: 28rpx; font-weight: bold; }
.card .card-main .card-img{float: left; width: 26.33%; text-align: center;}
.card .card-main  .card-img button{opacity: 0}
/* .card .card-main .card-img image{ width: 180rpx; height: 180rpx; } */
