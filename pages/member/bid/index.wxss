/*承运详情*/
.offer-info{ height: 80rpx; line-height: 80rpx; margin: 0rpx 30rpx; border-bottom: 2rpx solid #D7D7D7FF;}
.offer-info .info-text{float: left; color: #666666FF; font-size: 26rpx;}
.offer-info .info-txt{float: right; color: #999999FF; font-size: 26rpx;}
.offer-xinxi{ margin: 0rpx 30rpx; height:auto;}
.offer-xinxi view{ height: 60rpx; line-height: 60rpx; color: #666666FF; font-size: 26rpx;}
.offer-detail{ margin: 0rpx 30rpx; height:auto;}
.offer-detail view{ height: 60rpx; line-height: 60rpx; color: #666666FF; font-size: 26rpx;}
.offer-detail view .left{float: left;}
.offer-detail view .right{float: right;}
/*色条*/
.index-border{ width: 100%; height: 20rpx; margin: 20rpx auto; clear: both; background-color: #EDEDEDFF;}