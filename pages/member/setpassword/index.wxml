<!--修改密码-->
<view class="content">
  <view class="account">
    <view><input password='true' bindinput="pwdInput" placeholder="请输入原密码" name='oldPassword' value='{{oldPassword}}' /></view>
  </view>
  <view class="account">
    <view><input password password='true' bindinput="upwdBlur" placeholder="请设置新密码" name='newPassword' value='{{newPassword}}' /></view>
  </view>
   <view class="account">
    <view><input password password='true' bindblur="repasswordInput" placeholder="请再次输入新密码" name='repassword' value='{{repassword}}' /></view>
  </view>
  <button class="btn" bindtap='confirm' type="warn">确认</button>
</view>